// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/cpp
{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers-extra/features/starship:1": {},
		"ghcr.io/devcontainers/features/desktop-lite:1": {
			"password": "dev",
			"vncPort": "5901",
			"webPort": "6080"
		},
		"ghcr.io/devcontainers/features/python:1": {
          "version": "3.13" // Specify your desired Python version
        }
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [5901,6080],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y libsdl2-dev libsdl2-image-dev && sudo apt-get clean && sudo rm -rf /var/lib/apt/lists/*",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools-extension-pack"
			]
		}
	}

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
